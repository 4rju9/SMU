<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateNotification">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCreateNotification"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:titleTextColor="@color/black"
        android:background="@color/deepSkyBlue"/>

    <TextView
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_30sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textGuide1"
        android:textSize="@dimen/_25sdp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTitleCreateNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        android:inputType="text"
        android:hint="@string/hintTime"
        android:background="@drawable/rounded_corner_two"/>

    <EditText
        android:id="@+id/editMessageCreateNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:minLines="6"
        android:maxLines="12"
        android:gravity="top"
        android:textColor="@color/black"
        android:hint="@string/hintTitleForSubjects"
        android:background="@drawable/rounded_corner_two"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButtonCreateNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="@color/white"
        android:text="@string/nextButton"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/_10sdp"
        app:strokeColor="@color/deepSkyBlue"
        app:strokeWidth="@dimen/_2sdp"/>

</LinearLayout>