<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminPanelOptions.ManageAllSubjects">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAS"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:titleTextColor="@color/black"
        android:background="@color/deepSkyBlue"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="right">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/newButtonAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textAdd"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/black"
            app:strokeWidth="@dimen/_2sdp"
            app:cornerRadius="@dimen/_10sdp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteAllButtonAS"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textDeleteAll"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/black"
            app:strokeWidth="@dimen/_2sdp"
            app:cornerRadius="@dimen/_10sdp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tvAS"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_6sdp"
                android:text="@string/tvMain"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/deleteButtonAS"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_delete_forever_24"
                app:tint="@color/black"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/rounded_corner_black_stroke"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>